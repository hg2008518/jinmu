<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape>
            <corners android:radius="7dp" />

            <stroke android:width="1dp" android:color="@color/pinkred" />

            <gradient android:angle="90" android:endColor="@color/white" android:startColor="@color/pinkred" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <corners android:radius="7dp" />

            <stroke android:width="1dp" android:color="@color/pink" />

            <gradient android:angle="90" android:endColor="@color/pinkred" android:startColor="@color/pink" />
        </shape></item>

</selector>