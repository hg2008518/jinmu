<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orange"
    android:paddingBottom="10dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/top_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/left_arrow"
        android:drawablePadding="5dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical|left"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/top_serch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@drawable/bg_colorbtn"
        android:padding="5dp"
        android:src="@drawable/icon_search" />

    <ImageView
        android:id="@+id/top_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_colorbtn"
        android:src="@drawable/icon_prompt" />

    <ImageView
        android:id="@+id/top_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_colorbtn"
        android:src="@drawable/icon_share" />

    <TextView
        android:id="@+id/top_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawableRight="@drawable/btn_class_bg"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/myorder_state_allmyorder"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/top_utile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/top_class"
        android:background="@drawable/bg_colorbtn"
        android:gravity="center"
        android:minEms="4"
        android:singleLine="true"
        android:text="@string/car_utile"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal" 
        android:layout_marginRight="10dp">

        <com.jmz.view.TileTextView
            android:id="@+id/top_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/orange"
            android:drawableRight="@drawable/icon_car"
            android:gravity="center"
            android:visibility="gone" />

        <com.jmz.view.TileTextView
            android:id="@+id/top_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@null"
            android:drawableRight="@drawable/ic_home"
            android:gravity="center"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>