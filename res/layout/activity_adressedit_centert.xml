<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginBottom="3dp">

        <TextView
            android:id="@+id/adress_edit_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:drawableRight="@drawable/icon_spinner"
            android:background="@drawable/online_bg"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:maxLines="2"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/adress_edit_citytv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/icon_spinner"
            android:background="@drawable/online_bg"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/adress_edit_xian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" 
            android:drawableRight="@drawable/icon_spinner"
            android:background="@drawable/online_bg"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:singleLine="true"/>
    </LinearLayout>
    <!-- 城市 -->

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:src="@color/gray" />

  

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:src="@color/gray" />
    <!-- 街道 -->

    <EditText
        android:id="@+id/adress_edit_street"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/address_edit_street"
        android:padding="12dp"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:src="@color/gray" />
    <!-- 名字 -->

    <EditText
        android:id="@+id/adress_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/address_edit_name"
        android:padding="12dp"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:src="@color/gray" />
    <!-- 联系号码 -->

    <EditText
        android:id="@+id/adress_edit_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/address_edit_phone"
        android:inputType="phone"
        android:padding="12dp"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:src="@color/gray" />
    <!-- 邮编 -->

    <EditText
        android:id="@+id/adress_edit_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:hint="@string/address_edit_code"
        android:inputType="number"
        android:padding="12dp"
        android:textSize="14sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:src="@color/gray" />
    <!-- 设置默认 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp" >

        <CheckBox
            android:id="@+id/adress_edit_checkbox"
            style="@style/LoginCheckBoxStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/address_edit_auto"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:src="@color/gray" />

    <TextView
        android:id="@+id/adress_edit_save"
        style="@style/ColorButtonStyle"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/address_edit_save" />

    <TextView
        android:id="@+id/adress_edit_delete"
        style="@style/ColorButtonStyle"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/address_edit_delete"
         />

</LinearLayout>