<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="5dp">
	
    <ImageView
        android:id="@+id/findservice_adapter_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wawa" />

    <TextView
        android:id="@+id/findservice_adapter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/findservice_adapter_left"
        android:background="@drawable/left_bg"
        android:gravity="left|top"
        android:text="金拇指"
        android:maxEms="15" />

    <ImageView
        android:id="@+id/findservice_adapter_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/findservice_adapter_text"
        android:src="@drawable/wawa" />

</RelativeLayout>