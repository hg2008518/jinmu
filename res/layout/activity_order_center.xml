<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- 邮寄地址 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="收货地址"
            android:textColor="@color/deeporange"
            android:textSize="20sp" />

        <View style="@style/lineStyle" />

        <TextView
            android:id="@+id/order_center_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_gray"
            android:drawableRight="@drawable/arrow_right"
            android:gravity="center_vertical"
            android:padding="15dp"
            android:text="收货地址" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="订单"
            android:textColor="@color/deeporange"
            android:textSize="20sp" />

        <View style="@style/lineStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/order_center_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/nullimg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/order_center_img"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/order_center_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/msg_emptystring" />

                <TextView
                    android:id="@+id/order_center_attr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/msg_emptystring"
                    android:textColor="@color/deepgray" />
            </LinearLayout>
        </RelativeLayout>

        <View style="@style/lineStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="6dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="购买数量" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/order_center_subbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_white_orange_btn"
                    android:drawableTop="@drawable/ic_zoom_out"
                    android:padding="5dp"
                    android:textSize="0sp" />

                <EditText
                    android:id="@+id/order_center_numberedit"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/bg_edit_normal"
                    android:ems="5"
                    android:enabled="false"
                    android:gravity="center"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:text="1"
                    android:textColorHint="@android:color/black" />

                <TextView
                    android:id="@+id/order_center_addbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_white_orange_btn"
                    android:drawableTop="@drawable/ic_zoom_in"
                    android:padding="5dp"
                    android:textSize="0sp" />
            </LinearLayout>
        </RelativeLayout>

        <View style="@style/lineStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="商品总价" />

            <TextView
                android:id="@+id/order_center_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="10dp"
                android:text="￥200.00"
                android:textColor="@color/deeporange" />
        </RelativeLayout>

        <View style="@style/lineStyle" />
		<RelativeLayout
		        android:id="@+id/order_center_farelayout"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/white"
		        android:paddingBottom="10dp"
		        android:paddingLeft="15dp"
		        android:paddingRight="10dp"
		        android:paddingTop="10dp" >
		
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_centerVertical="true"
		            android:text="运费" />
		
		        <TextView
		            android:id="@+id/order_center_fareprice"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentRight="true"
		            android:layout_centerVertical="true"
		            android:paddingRight="10dp"
		            android:text="￥200.00"
		            android:textColor="@color/deeporange" />
		</RelativeLayout>
		
		<View style="@style/lineStyle" />
		
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送方式" />

            <RadioGroup
                android:id="@+id/order_center_radiogroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp" >
				
                <RadioButton
                    android:id="@+id/express_type_button"
                    style="@style/ProductAttrRadioGroupButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:checked="true"
                    android:text="@string/order_express" />

                <RadioButton
                    android:id="@+id/selfget_type_button"
                    style="@style/ProductAttrRadioGroupButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:text="@string/order_selfget" />
            </RadioGroup>
        </LinearLayout>

        <View style="@style/lineStyle" />
        
		<LinearLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    >
		    <ListView
		        android:id="@+id/lv_data"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent" >
   		 </ListView>
		</LinearLayout>
        
        <View style="@style/lineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="使用优惠劵"
                android:textColor="@color/deeporange"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(优惠劵号和验证码，没有则不填)"
                android:textColor="@color/deeporange"
                android:textSize="12sp" />
        </LinearLayout>

        <View style="@style/lineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <com.jmz.view.ClearEditTextView
                android:id="@+id/order_center_ticketnumber"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_normal"
                android:gravity="center"
                android:hint="劵号"
                android:numeric="integer"
                android:textSize="12sp" />

            <com.jmz.view.ClearEditTextView
                android:id="@+id/order_center_ticketcode"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edit_normal"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyz"
                android:gravity="center"
                android:hint="验证码"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/order_center_userallmoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:text="账户支付"
            android:textColor="@color/deeporange"
            android:textSize="20sp" />

        <View style="@style/lineStyle" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/order_center_userpay_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="输入你要支付的金额" />

            <EditText
                android:id="@+id/order_center_userpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/order_center_userpay_title"
                android:background="@drawable/bg_edit_normal"
                android:ems="4"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:text="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/order_center_userpay"
                android:text="元" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="给买家留言"
            android:textColor="@color/deeporange"
            android:textSize="20sp" />

        <View style="@style/lineStyle" />

        <EditText
            android:id="@+id/order_center_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_normal"
            android:hint="留言："
            android:minLines="3"
            android:paddingLeft="15dp" />
    </LinearLayout>

</ScrollView>