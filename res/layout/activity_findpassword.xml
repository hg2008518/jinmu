<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <!-- 输入手机号码 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="@string/findpassword_phone"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/findpassword_phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@drawable/bg_edit_normal"
                android:inputType="numberSigned"
                android:padding="5dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/findpassword_sendsms"
                style="@style/ColorButtonStyle"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="@string/findpassword_sendcode" />
        </LinearLayout>
        <!-- 输入验证码 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="@string/findpassword_entercode"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/findpassword_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_normal"
            android:padding="5dp"
            android:singleLine="true" />
        <!-- 请设置密码 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="@string/findpassword_password"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/findpassword_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_normal"
            android:inputType="textPassword"
            android:padding="5dp"
            android:singleLine="true" />
        <!-- 请再次设置密码 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:text="@string/findpassword_passwordagain"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/findpassword_passwordagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_normal"
            android:inputType="textPassword"
            android:padding="5dp"
            android:singleLine="true" />
        <!-- 推荐人 -->

        <TextView
            android:id="@+id/findpassword_sure"
            style="@style/ColorButtonStyle"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/dialog_sure"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" 
            android:paddingTop="20dp">
        </LinearLayout>
    </LinearLayout>

</ScrollView>