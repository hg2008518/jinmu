<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@drawable/bg_dialog_delete"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/prompt"
        android:gravity="center_vertical"
        android:text="@string/dialog_postout_msgtitle" 
        android:textSize="16sp"
        android:layout_margin="5dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/myalerdialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/myorder_msg_delete" />

     <EditText
        android:id="@+id/myalerdialog_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_normal"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:visibility="gone"/> 
    
    <EditText
        android:id="@+id/myalerdialog_numedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edit_normal"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:inputType="number"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/myalerdialog_sure"
            style="@style/ColorButtonStyle"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/dialog_sure" />

        <TextView
            android:id="@+id/myalerdialog_cancel"
            style="@style/ColorButtonStyle"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:text="@string/car_canle" />
    </LinearLayout>

</LinearLayout>